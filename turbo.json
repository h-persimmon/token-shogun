{
  "tasks": {
    "copy-assets": {
      "inputs": ["./apps/game/public/**"],
      "outputs": ["./apps/platform/public/**"]
    },
    "dev": {
      "dependsOn": ["copy-assets"],
      "persistent": true
    },
    "build": {
      "dependsOn": ["copy-assets"],
      "outputs": ["dist/**", ".next/**"]
    }
  }
}